{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "dist/out",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,    
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}